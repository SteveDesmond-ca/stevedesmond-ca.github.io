@model IEnumerable<Web.Models.Page>

<div class="btn">
    @Html.ActionLink("New", "create")
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Title</th>
            <th>Aggregate</th>
            <th>Crawl</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @p.Timestamp.ToString("g")
                </td>
                <td>
                    @p.Category
                </td>
                <td>
                    @Html.ActionLink(p.Title, "Edit", new { id = p.ID })
                </td>
                <td>
                    @if (p.Aggregate)
                    {
                        <i class="fa fa-check"></i>
                    }
                </td>
                <td>
                    @if (p.Crawl)
                    {
                        <i class="fa fa-check"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>