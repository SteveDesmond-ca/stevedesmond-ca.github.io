@using System.Threading.Tasks
@using Microsoft.AspNet.Http.Extensions
@using Web
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    @{
        const string name = "Steve Desmond";
        string description = ViewBag.Description ?? "Software developer and photographer from Ithaca, NY";
        var title = !string.IsNullOrEmpty(ViewBag.Subtitle) ? name + " – " + ViewBag.Subtitle : name;
    }
    <title>@title</title>
    <meta name="description" content="@description" />

    <meta name="og:site_name" content="@name" />
    <meta name="og:type" content="article" />
    <meta name="og:url" content="@Context.Request.GetDisplayUrl()" />
    <meta name="og:title" content="@title" />
    <meta name="og:description" content="@description" />
    <meta name="og:image" content="@Startup.ImageBase/steve-0300.jpg" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="stevedesmond_ca" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/index.css?@Startup.cssHash" />
</head>
<body>
    <header>
        <h1 class="title">
            <a href="/">Steve Desmond</a>
        </h1>
        <h1 class="pull-right link-icons hidden-xs">
            <a target="_blank" href="https://github.com/stevedesmond-ca" title="stevedesmond-ca">
                <i class="fa fa-github"></i>
            </a>
            <a target="_blank" href="https://twitter.com/stevedesmond_ca" title="stevedesmond_ca">
                <i class="fa fa-twitter"></i>
            </a>
        </h1>
        @Html.Partial("Navbar")
        <img alt="Steve" class="profile-photo" src="@Startup.ImageBase/steve-0300.jpg"
             srcset="@Startup.ImageBase/steve-0100.jpg 100w,
                @Startup.ImageBase/steve-0150.jpg 150w,
                @Startup.ImageBase/steve-0200.jpg 200w,
                @Startup.ImageBase/steve-0300.jpg 300w"
             sizes="(max-width: 767px) 100px, 150px" />
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="container">
        @if (!(ViewBag.NoFooter ?? false))
        {
            <hr />
            <small id="copyright" class="pull-right">&copy; Steve Desmond</small>
        }
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
        @Html.Partial("GA")
    </footer>
</body>
</html>