@using Microsoft.AspNetCore.Http.Extensions
@using Web
@using Web.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    @{
        string description = ViewBag.Description ?? Settings.Description;
        var title = !string.IsNullOrEmpty(ViewBag.Subtitle) ? Settings.Title + " – " + ViewBag.Subtitle : Settings.Title;
    }
    <title>@title</title>
    <meta name="description" content="@description" />

    <meta name="og:site_name" content="@Settings.Title" />
    <meta name="og:type" content="article" />
    <meta name="og:url" content="@Context.Request.GetDisplayUrl()" />
    <meta name="og:title" content="@title" />
    <meta name="og:description" content="@description" />
    <meta name="og:image" content="@Settings.ImageBase/steve-0300.jpg" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="stevedesmond_ca" />

    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/index.css?@Startup.cssHash" />
    <link rel="alternate" type="application/atom+xml" href="/feeds/atom" />
    <link rel="alternate" type="application/rss+xml" href="/feeds/rss" />
</head>
<body>
    @Html.Partial("Header")

    <main id="main" class="container">
        @RenderBody()
    </main>

    @Html.Partial("Footer")
</body>
</html>