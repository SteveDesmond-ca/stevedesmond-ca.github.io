@using Web
<!DOCTYPE html>
<html>
<head>
    @{
        var name = "Steve Desmond";
        var title = !string.IsNullOrEmpty(ViewBag.Subtitle) ? name + " – " + ViewBag.Subtitle : name;
    }
    <title>@title</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="description" content="Software developer and photographer from Ithaca, NY" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/index.css" />
</head>
<body>
    <div class="header">
        <h1 class="title">
            <a href="/">Steve Desmond</a>
        </h1>
        <h1 class="pull-right link-icons hidden-xs">
            <a target="_blank" href="https://github.com/stevedesmond-ca" title="stevedesmond-ca">
                <i class="fa fa-github"></i>
            </a>
            <a target="_blank" href="https://twitter.com/stevedesmond_ca" title="stevedesmond_ca">
                <i class="fa fa-twitter"></i>
            </a>
        </h1>
    </div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="hidden-print">
                    <a href="/">
                        <i class="fa fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="hidden-print">
                    <a href="/photo">
                        <i class="fa fa-camera"></i>
                        <span>Photography</span>
                    </a>
                </li>
                <li class="hidden-print">
                    <a href="/talks">
                        <i class="fa fa-comment"></i>
                        <span>Talks</span>
                    </a>
                </li>
                <li class="visible-xs hidden-print">
                    <a target="_blank" href="https://github.com/stevedesmond-ca">
                        <i class="fa fa-github"></i>
                        <span>Github</span>
                    </a>
                </li>
                <li class="visible-xs hidden-print">
                    <a target="_blank" href="https://twitter.com/stevedesmond_ca">
                        <i class="fa fa-twitter"></i>
                        <span>Twitter</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <img alt="Steve" class="profile-photo" src="@Startup.ImageBase/steve-0300.jpg"
         srcset="@Startup.ImageBase/steve-0100.jpg 100w,
                @Startup.ImageBase/steve-0150.jpg 150w,
                @Startup.ImageBase/steve-0200.jpg 200w,
                @Startup.ImageBase/steve-0300.jpg 300w"
         sizes="(max-width: 767px) 100px, 150px" />
    <div class="container">
        @RenderBody()
        <small id="copyright" class="pull-right">&copy; Steve Desmond</small>
    </div>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    @Html.Partial("GA")
</body>
</html>